package lista.exercicios;

import java.text.DecimalFormat;

import javax.swing.JOptionPane;

/*
 * 3. Faça uma aplicação em Java que pergunte quanto você ganha por hora e o número de horas trabalhadas 
 * no mês (use JOptionPane). Calcule e mostre o total do seu salário no referido mês.
 */

public class Exercicio03 {
	
	public static void main(String[] args) {
		
		boolean capturaOk = false;
		double valorHora = 0;
		double horas = 0;

		do {
			try {
				valorHora = Double.parseDouble(JOptionPane.showInputDialog("Digite o valor da sua hora:"));
				if (valorHora < 0)
					throw new NumberFormatException();
				capturaOk = true;
			} catch (NumberFormatException e) {
				capturaOk = false;
				JOptionPane.showMessageDialog(null, "Valor hora inválido");
			} catch (NullPointerException e) {
				System.exit(0);
			}
		} while (capturaOk == false);
		
		do {
			try {
				horas = Double.parseDouble(JOptionPane.showInputDialog("Digite quantidade horas trabalhadas:"));
				if (horas < 0)
					throw new NumberFormatException();
				capturaOk = true;
			} catch (NumberFormatException e) {
				capturaOk = false;
				JOptionPane.showMessageDialog(null, "Quantidade horas inválido");
			} catch (NullPointerException e) {
				System.exit(0);
			}
		} while (capturaOk == false);
		
		DecimalFormat numberFormat = new DecimalFormat("0.00");
		double salarioMes = (valorHora * horas);

		JOptionPane.showMessageDialog(null,"Seu salário é: R$" + numberFormat.format(salarioMes));
	}

}
