/*
 * Usando um laço de repetição, elabore uma aplicação em Java que apresente em
 * tela a seguinte sequência numérica: 1, 2, 4, 8, 16, 32, 64, ..., 2048.
 */

package lista.exercicios;

public class Exercicio07 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {

		int sequenciaNumerica = 0;
		int i = 0;

		while (sequenciaNumerica < 2048) {
			sequenciaNumerica = (int) Math.pow(2, i);
			System.out.println(sequenciaNumerica);
			i++;
		}
	}
}
