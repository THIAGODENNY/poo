/*
 * Faça uma aplicação em Java que receba um valor inteiro de outra aplicação em
 * Java (por meio do método main) e escreva o correspondente desse valor por
 * extenso. Considere apenas os valores entre 0 e 9. Dessa forma, ao receber o valor
 * 5 deverá imprimir “cinco” e assim por diante.
 */

package lista.exercicios;

public class Exercicio09 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		String imprimir;
		String[] numeros = {"Zero" , "Um" , "Dois" , "Três", "Quatro" , "Cinco" , "Seis" , "Sete", "Oito", "Nove"};
		int indexArray;
		
		try {
			indexArray = Integer.parseInt(args[0].toString());
			if(indexArray > numeros.length)
				throw new Exception();
			imprimir = numeros[indexArray];
		} catch (Exception e) {
			imprimir = "Valor Inválido";
		}
		
		System.out.println(imprimir);
	}

}
